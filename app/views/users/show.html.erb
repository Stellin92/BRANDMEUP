<img src="<%= @user.avatar_url%>" alt="Default avatar" class="avatar-bordered">

<div class="banner" style="background-color: #BC63F8;">
  <div class="container">
    <h1><%= @user.id %>'s profile</h1>
    <p><%= @user.bio%></p>
    <div class="ul">
      <div class="li">Talent: <%= @user.talent %></div>
      <div class="li">Values: <%= @user.values %></div>
    </div>
  </div>
</div>

<% if @user.has_outfit? %>
  <h2>The outfits</h2>
  <% @user.outfits.each do |outfit| %>
    <div class="card-product">
      <img src="<%= outfit.outfit_image_url %>" />
      <div class="card-product-infos">
        <h2><%= outfit.title %></h2>
        <p><%= outfit.description %></p>
        <p><%= outfit.color_set %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="banner" style="background-color: #ef49d6ff;">
    <div class="container">
      <h2>No outfit yet ?</h2>
      <p>Your profile feels naked without an outfit to wear. Let's change that now!</p>
      <%= link_to "Outfits Creator", "/outfits/new", class: "btn btn-flat"%>
    </div>
  </div>
<% end %>
