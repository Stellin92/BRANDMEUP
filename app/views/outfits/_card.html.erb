  <div class="outfit-card">
    <%= link_to outfit_path(outfit, modal: 1),
            data: { turbo_frame: "outfit_modal" } do %>
      <div class="outfit-card__media">
        <% if url_for(outfit.photo).present? %>
          <%= image_tag url_for(outfit.photo), alt: outfit.title %>
        <% end %>
      </div>
      <div class="outfit-card__body">
        <h3><%= outfit.title %></h3>
        <p><%= truncate(outfit.description, length: 80) %></p>
      </div>
    <% end %>
  </div>
