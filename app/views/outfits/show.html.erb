<div class="outfit-page">
  <!-- Image principale -->
  <div class="outfit-hero">
    <%= cl_image_tag @outfit.photo.key, alt: @outfit.title, class: "outfit-main-img" %>
  </div>

  <!-- Contenu -->
  <div class="outfit-content container">
    <h1 class="outfit-title"><%= @outfit.title %></h1>
    <p class="outfit-description"><%= @outfit.description %></p>

    <!-- Palette de couleurs -->
    <div class="outfit-colors">
      <% @outfit.color_set.each do |color| %>
        <div class="color-swatch" style="background-color:<%= color %>"></div>
      <% end %>
    </div>

    <!-- Items list -->
    <div class="outfit-items">
      <h3>Included items</h3>
      <ul>
        <% @outfit.items_list.each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </div>

    <!-- Goal & style -->
    <div class="outfit-meta">
      <p><strong>Style:</strong> <%= @outfit.style %></p>
      <p><strong>Goal:</strong> <%= @outfit.goal %></p>
    </div>

    <!-- Actions -->
    <div class="outfit-actions">
      <% if current_user == @outfit.user %>
        <%= link_to "Edit", edit_outfit_path(@outfit), class: "btn btn-secondary" %>
      <% end %>
      <%= link_to "Download PDF", outfit_path(@outfit, format: :pdf), class: "btn btn-flat" %>
      <%= link_to "Share", "#", class: "btn btn-primary" %>
    </div>
  </div>
</div>
